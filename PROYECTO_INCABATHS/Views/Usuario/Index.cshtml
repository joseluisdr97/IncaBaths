
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lista de Usuarios</h2>

<div class="container">
    <label class="control-label">Ingrese Nombre :</label>
    <div class="row">
        <form action="/Usuario/Index">
            <div class="col-sm-4">
                <input id="query" class="form-control" type="text" name="query" value="@ViewBag.datos" placeholder="Ingrese nombre" />
            </div>
            <div class="col-sm-2">
                <button id="btnBuscar" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> Buscar</button>
            </div>
        </form>
        <div class="col-sm-5">
            <a class="btn btn-primary pull-right" href="/Usuario/Crear"><span class="glyphicon glyphicon-plus"></span> Crear</a>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-11 text-center">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Perfil</th>
                        <th>Tipo de Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th>Celular</th>
                        <th>Direccion</th>
                        <th>Correo</th>
                        <th>Opción</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdUsuario</td>
                            <td><img src="@item.Perfil" style="width:50px;height:50px" class="img-circle" /></td>
                            <td>@item.TipoUsuario.Nombre</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.DNI</td>
                            <td>@item.Celular</td>
                            <td>@item.Direccion</td>
                            <td>@item.Correo</td>
                            <td>
                                <a class="btn btn-info" href="/Usuario/Editar?id=@item.IdUsuario"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a class="btn btn-danger" href="/Usuario/Eliminar?id=@item.IdUsuario"><span class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
<script>
    //BUSCAR CUANDO DAMOS CLICK
    $("#btnBuscar").click(function (e) {
        e.preventDefault();
        var valor = $("#query").val();
        $.ajax({ url: "/Usuario/BuscarUsuario?query=" + valor })
        .success(function (respuesta) {
            $("#tbody").html(respuesta);
        });
    });

    //BUSCAR CUANDO DAMOS ENTER
    $("#query").keypress(function (e) {
        var code = (e.keyCode ? e.keyCode : e.which);
        if (code == 13) {
            var valor = $("#query").val();
           $.ajax({ url: "/Usuario/BuscarUsuario?query=" + valor })
            .success(function (respuesta) {
                $("#tbody").html(respuesta);
            });
        }
    });
</script>