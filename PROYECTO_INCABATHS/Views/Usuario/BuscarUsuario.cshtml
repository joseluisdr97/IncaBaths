
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <tr>
        <td>@item.IdUsuario</td>
        <td><img src="@item.Perfil" style="width:50px;height:50px" class="img-circle" /></td>
        <td>@item.TipoUsuario.Nombre</td>
        <td>@item.Nombre</td>
        <td>@item.Apellido</td>
        <td>@item.DNI</td>
        <td>@item.Celular</td>
        <td>@item.Direccion</td>
        <td>@item.Correo</td>
        <td>
            <a class="btn btn-info" href="/Usuario/Editar?id=@item.IdUsuario"><span class="glyphicon glyphicon-pencil"></span> Editar</a>
            <a class="btn btn-danger" href="/Usuario/Eliminar?id=@item.IdUsuario"><span class="glyphicon glyphicon-trash"></span> Eliminar</a>
        </td>
    </tr>
}
}

