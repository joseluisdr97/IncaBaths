
@{
    Layout = null;
}


    <div class="row">
        <div class="col-sm-11 text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Dia</th>
                        <th>Servicio</th>
                        <th>Hora de ingreso</th>
                        <th>Hora de salida</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Turno.Dia</td>
                            <td>@item.Servicio.Nombre</td>
                            <td>@item.Turno.HoraInicio</td>
                            <td>@item.Turno.HoraFin</td>
                            <td>@item.Servicio.Precio</td>
                            <td>@item.Cantidad</td>
                            <td>@item.SubTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
